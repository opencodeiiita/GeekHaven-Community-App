<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.signinActivity"
    android:background="#0a0c16">

    <ImageView
        android:id="@+id/backButtonSignIn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:src="@drawable/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:layout_gravity="center"
        android:layout_marginTop="-58dp"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:textSize="30sp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/color_balls"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email and password to log in"
        android:textStyle="bold"
        android:textColor="#8B8A8A"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:textSize="15sp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColorHint="#F0F0F0"
        app:boxCornerRadiusTopStart="15dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        android:textColor="@color/white"
        app:boxStrokeColor="#404040"
        app:hintTextColor="@color/white"
        android:background="#000000">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your mail"
            android:fontFamily="@font/poppins"
            android:textColorHighlight="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:outlineSpotShadowColor="#CF2727"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxStrokeColor="#404040"
        app:hintTextColor="@color/white"
        android:background="#000000">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:hint="Enter your password"
            android:textColorHighlight="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Forgot Password?"
        android:textColor="#E8E7E7"
        android:fontFamily="@font/poppins"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-5dp"
        android:textSize="14sp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Sign In"
        android:textSize="18sp"
        android:layout_marginHorizontal="25dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:background="@drawable/sigin_button"
        android:backgroundTint="#3580ff"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signin with"
        android:textStyle="bold"
        android:textColor="#8B8A8A"
        android:fontFamily="@font/poppins"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="15sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/logo_border2"
            android:src="@drawable/apple"/>

        <ImageView
            android:id="@+id/signinGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding ="14dp"
            android:background="@drawable/logo_border2"
            android:layout_marginStart="15dp"
            android:src="@drawable/google__1_"/>


    </LinearLayout>

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signinString"
        android:textStyle="bold"
        android:textColor="#CBC7C7"
        android:fontFamily="@font/poppins"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>


</LinearLayout>